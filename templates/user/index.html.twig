{% extends 'baseAdmin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="x_panel">
        <div class="x_title">
            <h2>Users <small> List </small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>FisrtName</th>
                        <th>LastName</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.fisrtName }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            <td>
                                <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-primary btn-xs"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i></a>
                                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>FisrtName</th>
                        <th>LastName</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                    </tfoot>
                </table>
                <a href="{{ path('user_new') }}" class="btn btn-success btn-xs"><i class="fa fa-plus-circle"></i>Create new</a>
            </div>
        </div>
    </div>

{% endblock %}

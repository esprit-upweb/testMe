{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="my-5 d-flex justify-content-center">
        <div class="col-4 my-5">
            <h1 class="h3 mb-3 font-weight-normal text-center">Please sign up!</h1>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.fisrtName, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.roles, {'attr': {'class': 'form-control'}}) }}
            <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-lg btn-primary my-3">Register</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'baseAdmin.html.twig' %}

{% block title %}User Add{% endblock %}

{% block body %}
<div class="x_panel">
    <div class="x_title">
        <h2>Users <small> List </small></h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

            <a href="{{ path('post_index') }}" class="btn btn-info">back to list</a>

            <a href="{{ path('post_edit', {'slug': post.slug}) }}" class="btn btn-warning">edit</a>

            {{ include('post/_delete_form.html.twig') }}

        </div>
    </div>
</div>
{% endblock %}
